{
    // General editor settings
    "window.commandCenter": true,   // search box at top of window
    "editor.colorDecorators": true, // show colour pickers in code


    // üêç UV PYTHON ENVIRONMENT
    // Run `uv sync` to create .venv/, then restart IDE to activate environment
    // Verify: open a NEW terminal and run `which python`, should show ../.venv/bin/python
    // Python interpreter and dependencies are now isolated inside .venv/
    "python.defaultInterpreterPath": "./.venv/bin/python", 

    // üêç Ruff: Python code linting and formatting 
    // This configures HOW the IDE behaves (the WHAT to check is in pyproject.toml)
    // NB: Cursor PyRight's WHAT to check also in pyproject.toml [tool.pyright]
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },

}